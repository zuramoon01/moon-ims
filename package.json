{
  "name": "moon-ims",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bunx --bun vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "migration:generate": "bun drizzle-kit generate",
    "migration:run": "bun run ./src/lib/server/database/migration.ts",
    "test": "bun run test:integration && bun run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test:integration": "playwright test",
    "test:unit": "vitest"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "drizzle-orm": "^0.33.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-svelte": "^0.445.0",
    "nanoid": "^5.0.7",
    "postgres": "^3.4.4",
    "uuid": "^10.0.0",
    "valibot": "^0.42.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.0",
    "@sveltejs/adapter-auto": "^3.2.4",
    "@sveltejs/adapter-vercel": "^5.4.4",
    "@sveltejs/kit": "^2.5.26",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@types/bun": "^1.1.9",
    "@types/eslint": "^9.6.1",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.20",
    "clsx": "^2.1.1",
    "cssnano": "^7.0.6",
    "drizzle-kit": "^0.24.2",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.43.0",
    "globals": "^15.9.0",
    "postcss": "^8.4.45",
    "postcss-preset-env": "^10.0.3",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.6",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "svelte": "^4.2.19",
    "svelte-check": "^4.0.2",
    "tailwind-merge": "^2.5.2",
    "tailwindcss": "^3.4.11",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.5.0",
    "vite": "^5.4.4",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": "18.x"
  }
